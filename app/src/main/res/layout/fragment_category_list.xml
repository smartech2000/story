<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="categoryViewModel"
            type="com.smarttech.story.ui.category.CategoryViewModel" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_list"
        android:name="com.smarttech.story.ui.category.CategoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="@dimen/height_of_app_bar"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.category.CategoryFragment"
        tools:listitem="@layout/fragment_category" />
</layout>